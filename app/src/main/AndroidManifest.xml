<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vyavaharkardevendra.translateit">

    <application
        android:allowBackup="true"
        android:icon="@drawable/translate"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity"
            android:label="Select Language">
        </activity>

        <activity android:name=".German"
            android:label="English to German">
        </activity>

        <activity android:name=".English"
            android:label="German To English">
        </activity>

        <activity android:name=".Add"
            android:label="Add New Words">
        </activity>

    </application>

</manifest>